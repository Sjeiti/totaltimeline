{
  "name": "totaltimeline",
  "description": "Total Timeline",
  "version": "0.1.62",
  "repository": "https://xp-dev.com/git/totaltimeline",
  "scripts": {
    "build": "npm run clean && npm run dir && npm run js && npm run css && npm run copy",
    "copy": "shx cp src/index.html dist/index.html && shx cp src/.htaccess dist/.htaccess && shx cp -r src/static dist && shx cp src/style/*.png dist/style && shx cp -r src/fonts dist",
    "copy:l": "cp src/index.html dist/index.html | cp src/.htaccess dist/.htaccess | cp -r src/static dist | cp src/style/*.png dist/style | cp -r src/fonts dist",
    "lint": "eslint src/js/index.js",
    "js": "webpack --config webpack.config.js",
    "js:watch": "chokidar src/**/*.js -c \"npm run js\"",
    "serve": "node ./task/serve dist 8385",
    "json": "node ./task/wiki ./src/static/events.json",
    "css": "npm run css:icons && npm run css:less && npm run css:prefix && npm run css:minify",
    "css:watch": "chokidar src/**/*.less -c \"npm run css:less\"",
    "css:icons": "node task/img2css --source ./src/icon/ --target ./src/style/icons.less",
    "css:less": "lessc src/style/screen.less dist/style/screen.css",
    "css:prefix": "postcss dist/style/screen.css --use autoprefixer -d dist/style/",
    "css:minify": "postcss dist/style/screen.css --use cssnano -d dist/style/",
    "dir": "mkdirp dist/js",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "chokidar-cli": "^1.2.0",
    "commander": "^2.11.0",
    "copy": "^0.3.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.4.1",
    "eslint-plugin-html": "^3.1.1",
    "express": "^4.15.3",
    "less": "^2.7.2",
    "mkdirp": "^0.5.1",
    "open": "0.0.5",
    "postcss-cli": "^4.1.0",
    "rimraf": "^2.6.1",
    "serve-static": "^1.12.3",
    "shx": "^0.2.2",
    "webpack": "^3.4.1",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "signals": "^1.0.0"
  }
}
